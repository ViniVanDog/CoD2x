{
    "version": "2.0.0",
    "tasks": [    
        {
            "label": "Clean Win",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": ["clean_win"],
            "group": {
                "kind": "build",
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}/tools/mingw/bin;${env:PATH}"
                }
            }
        },
        {
            "label": "Clean Linux",
            "type": "shell",
            "command": "wsl",
            "args": ["make", "clean_lin"],
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "Build Win",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": ["build_mss32_win", "-j${env:NUMBER_OF_PROCESSORS}"],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/tools/mingw/bin;${env:PATH}"
                }
            }
        },

        {
            "label": "Build Linux",
            "type": "shell",
            "command": "wsl",
            "args": ["make", "build_cod2x_linux", "-j${env:NUMBER_OF_PROCESSORS}"],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build"
            },
        },
        {
            "label": "WSL Linux",
            "type": "shell",
            "command": "${workspaceFolder}/tools/wsl/WSL_run.bat",
            "args": [
              "${workspaceFolder}",
              "+exec launch_args_linux.cfg"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "Build Linux"
            ],
        },

        {
            "label": "Zip",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": ["zip_all"],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/tools/mingw/bin;${workspaceFolder}/tools/7zip;${env:PATH}"
                }
            }
        },
        {
            "label": "Rebuild Win RELEASE",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": ["rebuild_mss32_win", "-j${env:NUMBER_OF_PROCESSORS}", "DEBUG=0"],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "env": {
                    "PATH": "${workspaceFolder}/tools/mingw/bin;${env:PATH}"
                }
            }
        },
        {
            "label": "Rebuild Linux RELEASE",
            "type": "shell",
            "command": "wsl",
            "args": ["make", "rebuild_cod2x_linux", "-j${env:NUMBER_OF_PROCESSORS}", "DEBUG=0"],
            "group": {
                "kind": "build"
            },
        }
    ]
}